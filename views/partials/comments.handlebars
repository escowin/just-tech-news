<div class="comments">
    {{!-- built-in helper function loops through the comments array by using the keyword this--}}
    {{#each this}}
    <section class="comment">
        <div class="meta">
        {{!-- custom helper formats date --}}
            {{user.username}} on {{format_date created_at}}
        </div>
        <div class="text">
            {{comment_text}}
        </div>
    </section>
    {{/each}}
</div>